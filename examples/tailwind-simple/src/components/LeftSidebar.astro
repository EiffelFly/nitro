---
import { SidebarElement } from "../nitro.config";
import cn from "clsx"

export interface Props {
  currentPage: string,
  sidebarElements: SidebarElement[]
  sidebarTopOffset: string
}

const { currentPage, sidebarElements, sidebarTopOffset } = Astro.props as Props;;
const currentPageMatch = currentPage.slice(1);

// SIDEBAR is a flat array. Group it by sections to properly render.

type SidebarSection = {
  text: string,
  children: SidebarElement[]
}

const sidebarSections = sidebarElements.reduce<SidebarSection[]>((col, item, i) => {
  // If the first item is not a section header, create a new container section.
  if (i === 0) {
    if (!item.header) {
      const pesudoSection = { text: "" };
      col.push({ ...pesudoSection, children: [] });
    }
  }
  if (item.header) {
    col.push({ ...item, children: [] });
  } else {
    col[col.length - 1].children.push(item);
  }
  return col;
}, []);
---

<nav class={cn("w-full sticky top-0", sidebarTopOffset)} aria-labelledby="grid-left">
  <ul class="h-full overflow-x-visible overflow-y-auto max-h-screen">
    {sidebarSections.map((section) => (
    <li>
      <div class="">
        <h2 class="text-lg font-bold px-0.5 py-4 uppercase mb-2">{section.text}</h2>
        <ul>
          {section.children.map((child) => (
          <li class={cn("text-base px-2 py-1 cursor-pointer hover:bg-slate-200", {"bg-blue-300 font-semibold" :
            currentPageMatch===child.link})}>
            <a href={`${Astro.site.pathname}${child.link}`}>
              {child.text}
            </a>
          </li>
          ))}
        </ul>
      </div>
    </li>
    ))}
  </ul>
</nav>

