---
import { isExteriorLink, isInteriorLink, NavbarItem } from "nitro";

export type Props = {
  item: NavbarItem;
};

const { item } = Astro.props as Props;
---

{() => {
  if (isInteriorLink(item)) {
    return (
      <a class="text-lg font-medium" href={item.to}>
        {item.label}
      </a>
    );
  }

  if (isExteriorLink(item)) {
    return (
      <a
        href={item.href}
        target="_blank"
        rel="noopener noreferer"
        class="flex my-auto"
      >
        {item.icon ? (
          <img
            src={item.icon.src}
            width={item.icon.width}
            height={item.icon.height}
            alt={item.icon.alt}
          />
        ) : (
          <p class="my-auto">{item.label}</p>
        )}
      </a>
    );
  }
}}
